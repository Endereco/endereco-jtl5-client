{
    "name": "endereco/endereco-jtl5-client",
    "authors": [
        {
            "name": "Ilja Weber",
            "email": "ilja@endereco.de"
        }
    ],
    "require": {
        "ext-curl": "*",
        "ext-json": "*"
    },
    "scripts": {
        "qa": [
            "@phpcs",
            "@phpstan",
            "@phpcompat"
        ],
        "phpcbf": "phpcbf --standard=PSR12 --ignore=vendor/ --ignore=node_modules/ ./src ./Bootstrap.php",
        "phpcs": "phpcs --standard=PSR12 --ignore=vendor/ --ignore=node_modules/ ./src ./Bootstrap.php",
        "phpstan": [
            "phpstan analyse -c phpstan.jtl-shop-5.1.6.neon",
            "phpstan analyse -c phpstan.jtl-shop-5.2.4.neon"
        ],
        "phpcompat": "bash test_php_versions.sh",
        "post-install-cmd": [
            "chmod +x test_php_versions.sh",
            "chmod +x build.sh",
            "cghooks add --ignore-lock"
        ],
        "post-update-cmd": [
            "chmod +x test_php_versions.sh",
            "chmod +x build.sh",
            "cghooks update"
        ]
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.7.2",
        "brainmaestro/composer-git-hooks": "^2.8",
        "phpstan/phpstan": "^1.10"
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer qa"
            ]
        }
    }
}
